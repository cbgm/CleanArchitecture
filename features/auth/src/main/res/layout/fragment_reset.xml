<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:layout_marginTop="32dp">

   <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="20dp"
      android:layout_marginEnd="20dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="30dp">

      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_horizontal"
         android:orientation="vertical"
         android:paddingBottom="20dp"
         android:paddingEnd="30dp"
         android:paddingStart="30dp">

         <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="18sp" />

         <EditText
            android:id="@+id/email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="E-Mail"
            android:inputType="textPersonName"
            android:textCursorDrawable="@android:color/holo_green_light"
            android:textSize="12sp"
            tools:text="E-Mail"
            tools:ignore="Autofill,HardcodedText,TextFields" />

         <LinearLayout
            android:id="@+id/reset_btn"
            style="@style/AppTheme.ButtonNormalLoading"
            android:orientation="horizontal">

            <TextView
               android:id="@+id/reset_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:clickable="false"
               android:text="RESET"
               android:textColor="@android:color/black"
               android:visibility="visible"
               tools:ignore="HardcodedText" />

            <ImageView
               android:id="@+id/valid_img"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:visibility="gone"
               app:srcCompat="@drawable/ic_valid"
               tools:ignore="ContentDescription,InefficientWeight" />

            <ProgressBar
               android:id="@+id/reset_loading"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:clickable="false"
               android:indeterminateTint="@android:color/black"
               android:visibility="gone" />
         </LinearLayout>

         <TextView
            android:id="@+id/back_btn"
            style="@style/AppTheme.ButtonAlternate"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="BACK"
            tools:ignore="HardcodedText" />

      </LinearLayout>

   </androidx.cardview.widget.CardView>

   <ImageView
      android:id="@+id/login_img"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerInParent="false"
      android:elevation="2dp"
      android:src="@drawable/shape_reset"
      tools:ignore="ContentDescription" />

</RelativeLayout>